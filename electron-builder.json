{
  "appId": "com.queenbee.app",
  "productName": "QueenBee",
  "protocols": [
    {
      "name": "QueenBee",
      "schemes": ["queenbee"]
    }
  ],
  "directories": {
    "output": "dist",
    "app": "."
  },
  "files": [
    "dist-electron/main.cjs",
    "dist-electron/preload.cjs",
    "package.json"
  ],
  "extraResources": [
    {
      "from": "proxy-bridge",
      "to": "proxy-bridge",
          "filter": [
          "**/*",
          "node_modules/**",
          "!*.log",
            "!test-project/**",
            "!logs/**",
            "!.next/cache/**"
          ]
    },
    {
      "from": "dashboard/dist",
      "to": "dashboard/dist",
      "filter": ["**/*"]
    }
  ],
  "asar": true,
  "mac": {
    "target": ["dmg"],
    "category": "public.app-category.developer-tools",
    "identity": null,
    "hardenedRuntime": true,
    "gatekeeperAssess": false
  },
  "linux": {
    "target": ["AppImage", "deb"],
    "category": "Development"
  },
  "win": {
    "target": ["nsis"],
    "requestedExecutionLevel": "asInvoker"
  },
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true,
    "createDesktopShortcut": true,
    "createStartMenuShortcut": true
  }
}

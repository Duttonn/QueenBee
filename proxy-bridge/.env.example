# ============================
# Queen Bee - Production .env
# ============================

# Server
NODE_ENV=production
PORT=3000
SOCKET_PORT=3001

# URLs
FRONTEND_URL=https://queenbee.vercel.app
API_BASE_URL=https://api.queenbee.dev
ALLOWED_ORIGINS=https://queenbee.vercel.app,http://localhost:5173,http://127.0.0.1:5173

# OAuth Redirect (must match GitHub App settings)
OAUTH_REDIRECT_URI=https://api.queenbee.dev/api/auth/callback

# Storage
CODEX_HOME=/home/queenbee/.codex

# QueenBee config directory (~/.queenbee by default)
# Mac:   /Users/ndn18/.queenbee
# Linux: /home/fish/.queenbee
QUEENBEE_CONFIG_DIR=

# Projects root (absolute path where your projects live)
# Mac:   /Users/ndn18/PersonalProjects/QueenBee
# Linux: /home/fish/QueenBee
PROJECTS_ROOT=

# GitHub OAuth
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=

# Google OAuth (optional)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# AI Provider Keys (add as needed)
# ANTHROPIC_API_KEY=
# OPENAI_API_KEY=

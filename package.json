{
  "name": "queen-bee",
  "version": "0.1.0",
  "private": true,
  "main": "dashboard/dist-electron/main.cjs",
  "scripts": {
    "postinstall": "npm install --prefix dashboard && npm install --prefix proxy-bridge",
    "dev": "npm run dev --prefix dashboard",
    "build": "npm run build --prefix dashboard && electron-builder",
    "electron:dev": "export VITE_ELECTRON=true && npm run dev --prefix dashboard",
    "electron:build": "export VITE_ELECTRON=true && npm run build --prefix dashboard && electron-builder",
    "build-dashboard": "npm run build --prefix dashboard"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "concurrently": "^8.2.2",
    "electron": "^29.2.0",
    "electron-builder": "^23.0.0",
    "vite": "^7.3.1",
    "vite-plugin-electron": "^0.29.0",
    "vite-plugin-electron-renderer": "^0.14.6",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.queenbee.app",
    "productName": "QueenBee",
    "directories": {
      "output": "dist-electron",
      "buildResources": "build"
    },
    "files": [
      "dashboard/dist-electron/**",
      "dashboard/dist/**"
    ],
    "asarUnpack": [
      "**/*.node"
    ]
  },
  "dependencies": {
    "fs-extra": "^11.3.3",
    "simple-git": "^3.30.0"
  }
}
